<?xml version="1.0" encoding="utf-8"?>
<schemalist>
	<schema id="io.github.vikdevelop.SaveDesktop" path="/io/github/vikdevelop/SaveDesktop/">
		<key name="window-size" type="(ii)">
			<default>(750,540)</default>
			<summary>Window size</summary>
		</key>
		<key name="maximized" type="b">
		  <default>false</default>
		  <summary>Window maximization</summary>
		</key>
		<key name="save-installed-flatpaks" type="b">
			<default>false</default>
			<summary>Save installed Flatpak apps (option)</summary>
		</key>
		<key name="save-icons" type="b">
			<default>true</default>
			<summary>Save icons (option)</summary>
		</key>
		<key name="save-themes" type="b">
			<default>true</default>
			<summary>Save themes (option)</summary>
		</key>
		<key name="save-fonts" type="b">
			<default>true</default>
			<summary>Save fonts (option)</summary>
		</key>
		<key name="save-backgrounds" type="b">
			<default>true</default>
			<summary>Save backgrounds (option)</summary>
		</key>
		<key name="periodic-saving" type="s">
		  <choices>
				<choice value="Never"/>
				<choice value="Daily"/>
				<choice value="Weekly"/>
				<choice value="Monthly"/>
			</choices>
			<default>"Never"</default>
			<summary>Periodic saving</summary>
		</key>
		<key name="periodic-saving-folder" type="s">
		  	<default>''</default>
		  	<summary>Folder for periodic backups</summary>
		</key>
		<key name="filename" type="s">
			<default>''</default>
			<summary>Filename text</summary>
		</key>
		<key name="filename-format" type="s">
			<default>'config_{}'</default>
			<summary>File name format (designed to periodic saving)</summary>
		</key>
		<key name="file-for-syncing" type="s">
		  <default>''</default>
		  <summary>File for synchronization with other computers in the network</summary>
		</key>
		<key name="url-for-syncing" type="s">
		  <default>''</default>
		  <summary>URL of local directory to be get file for importing configuration</summary>
		</key>
		<key name="periodic-import" type="s">
		  <choices>
				<choice value="Never2"/>
				<choice value="Daily2"/>
				<choice value="Weekly2"/>
				<choice value="Monthly2"/>
			</choices>
			<default>"Never2"</default>
			<summary>Periodic import</summary>
		</key>
	</schema>
</schemalist>
